@using ImageService.Infrastructure.Modal

@model ImageServer.WebApplication.Models.LogModel

@{
    ViewBag.Title = "Logs";
}
<h2>Logs</h2>

<div>
    @using (Html.BeginForm("LogChangeFilter", "Log", FormMethod.Post))
    {

        <div>
            <br />
            @Html.DropDownList("typeFilter",
                                       new SelectList(Enum.GetValues(typeof(MessageTypeEnum))),
                                       "Log type",
                                       new { @class = "form-control" })
            <br />
            <input type="submit" id="submitId" value="Filter" class="btn-info" />

        </div>

    }

</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Message)
        </th>
    </tr>

    @foreach (var item in Model.SelectedLogMessages)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
        </tr>
    }

</table>



